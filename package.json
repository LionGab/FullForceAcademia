{
  "name": "whatsapp-baileys-waha-academia",
  "version": "1.0.0",
  "description": "Sistema WhatsApp otimizado com Baileys + WAHA para academias pequenas",
  "main": "whatsapp-baileys-waha-simple.js",
  "scripts": {
    "start": "node whatsapp-baileys-waha-simple.js",
    "dev": "nodemon whatsapp-baileys-waha-simple.js",
    "docker:up": "docker-compose -f docker-compose-academia-waha.yml up -d",
    "docker:down": "docker-compose -f docker-compose-academia-waha.yml down",
    "docker:logs": "docker-compose -f docker-compose-academia-waha.yml logs -f",
    "setup": "npm install && npm run docker:up",
    "test": "curl http://localhost:4000/health",
    "clean": "rm -rf node_modules baileys_auth .sessions"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "waha",
    "academia",
    "automation",
    "n8n",
    "simple"
  ],
  "author": "Academia System",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.5",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}