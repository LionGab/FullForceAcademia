# Server Configuration
PORT=4000
NODE_ENV=production

# WAHA API Configuration
WAHA_URL=http://localhost:3000
WAHA_API_KEY=academia_secure_key_2024
WAHA_SESSION=academia-session

# N8N Integration (opcional)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/academia-whatsapp
N8N_ENABLED=true

# Academia Configuration
